{
  "compileOnSave": true,
  "compilerOptions": {
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./build"
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
